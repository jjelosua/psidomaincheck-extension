{
  "manifest_version": 2,
  "name": "kako",
  "version": "1.0.0",
  "description": "Check domains privately using PSI and k-anonimity",
  "icons": {
    "48": "img/kako_48dp.png",
    "96": "img/kako_48dp@2x.png"
  },
  "permissions": [
    "alarms",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
      "scripts": [
          "js/sodium.js",
          "js/background.js"
      ]
  },
  "browser_action": {
    "default_icon": "img/kako_48dp.svg",
    "default_title": "Kako: Check the domains you visit privately",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "web_accessible_resources": ["blocked.html"]
}
